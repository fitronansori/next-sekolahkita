# Environment Variables Example
# Copy this file to .env and fill in your actual values

# ==============================================
# CLERK AUTHENTICATION
# ==============================================
# Get these from your Clerk Dashboard (https://dashboard.clerk.com)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key_here

# Clerk URL Configuration
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_SIGN_IN_FALLBACK_REDIRECT_URL=/dashboard
NEXT_PUBLIC_CLERK_SIGN_UP_FALLBACK_REDIRECT_URL=/dashboard

# Clerk Webhooks (for user sync)
CLERK_WEBHOOK_SIGNING_SECRET=whsec_your_webhook_signing_secret_here

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# PostgreSQL Database URLs (Supabase recommended)
# Main database connection (with connection pooling)
DATABASE_URL="postgresql://username:password@host:port/database?pgbouncer=true&connection_limit=1"

# Direct database connection (for migrations)
DIRECT_URL="postgresql://username:password@host:port/database"

# ==============================================
# FILE UPLOAD CONFIGURATION
# ==============================================
# UploadThing Configuration (https://uploadthing.com)
# Get your secret key from UploadThing dashboard
UPLOADTHING_SECRET=sk_your_uploadthing_secret_key_here
UPLOADTHING_APP_ID=your_uploadthing_app_id_here

# ==============================================
# NEXT.JS CONFIGURATION
# ==============================================
# Next.js Environment
NODE_ENV=development

# App URL (for webhooks and callbacks)
NEXT_PUBLIC_APP_URL=http://localhost:3000
